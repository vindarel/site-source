:contents
$(xml (:article (:h2 (str title))
                (str (contenty))
                (:span :class "prev"
                       (let ((prev (prev-page "posts")))
                         (when prev (htm (:a :href (page-address prev) "Previous post")))))
                (:span :class "next"
                       (let ((next (next-page "posts")))
                         (when next (htm (:a :href (page-address next) "Next post")))))))
